<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="terminatorQuoter" class="aarexer.spring.example.TerminatorQuoter">
        <property name="message" value="Hello World!"/>
    </bean>

    <bean class="aarexer.spring.example.InjectRandomIntAnnotationBeanPostProcessor"/>
    <bean class="aarexer.spring.example.ProfilingBeanPostProcessor"/>

    <context:annotation-config/>

</beans>